<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="m-b-0 text-white">Quotation list:</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive m-t-40">
                    <a href="@Url.Action("Create", "Quotation")" class="btn waves-effect waves-light btn-outline-success">+ Add Quotation</a>
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>Customer</th>
                                <th>Event Date</th>
                                <th>Disscount Applied</th>
                                <th><font color="green">Disscount Percentage/</font><br/><font color="red">Amount After Disscount</font></th>
                                <th>Total Amount</th>
                                <th>Approved</th>
                                <th>More Info</th>
                                <th><font color="green">Created</font> / <font color="red">Updated Date</font></th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td align="left">@item.tblCustomer.CustomerName</td>
                                <td align="center">@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.EventDate))</td>
                                <td align="center">@(item.IsDisccount == true ? "Yes" : "No")</td>

                                <td align="left">
                                    <font color="green">@item.DisscountPercentage% </font><br/>
                                    <font color="red">@Convert.ToDecimal(item.AmmountAfterDisscount).ToString("0.00")</font>
                                </td>
                                <td align="left">@Convert.ToDecimal(item.TotalAmount).ToString("0.00")</td>
                                <td align="center">
                                    @if (item.IsPass == true)
                                    {

                                        <button class="btn btn-success btn-rounded" title="Click here to Deactivate Customer" onclick="javascript:fnChangeIsPassStatus(@item.QuotationID,0)">
                                            <i class="fa fa-check"></i> Is Pass
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger btn-rounded" title="Click to activate customer" onclick="javascript:fnChangeIsPassStatus(@item.QuotationID,1)">
                                            <i class="fa fa-times"></i> Is not Pass
                                        </button>
                                    }
                                </td>
                                <td align="center">
                                    <a data-toggle="modal" data-target=".bs-example-modal-lg" href="" onclick="javascript:fnShowMoreInfo(@item.QuotationID)"> <h4 class="mdi mdi-magnify"></h4></a>
                                    
                                </td>
                                <td align='center'><font color="green">@item.CreatedDate</font> <br /> <font color="red">@item.UpdatedDate</font></td>
                                <td align="center">

                                    @Html.ActionLink("Update", "Edit", new { id = item.CustomerID }, htmlAttributes: new { @class = "btn btn-warning waves-effect waves-light" })
                                </td>
                                <td align="center">
                                    <button type="submit" class="btn btn-danger waves-effect waves-light" onclick="return ConfirmationDialog(@item.QuotationID)">
                                        <span class="btn-label"><i class="fa fa-trash"></i></span>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


