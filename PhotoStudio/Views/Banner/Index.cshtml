@model IEnumerable<PhotoStudio.Models.tblbanner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function ConfirmationDialog(BannerID) {
        if (confirm("Are you sure to delete?"))
            fnDeleteRecord(BannerID);
        else
            return false;
    }

    function fnDeleteRecord(BannerID) {
        $.ajax({
            async: true,
            type: 'POST',
            dataType: 'JSON',
            contentType: 'application/json; charset=utf-8',
            data: "{'id':'" + BannerID + "'}",
            url: '/Banner/DeleteBanner',
            success: function (response) {
                if (response.success === true) {
                    toastr.success(
                        response.message,
                        'Record is deleted',
                        {
                            timeOut: 1000,
                            fadeOut: 1000,
                            onHidden: function () {
                                window.location.reload();
                            }
                        }
                    );
                }
                else {
                    toastr.info(response.message, 'Record is not deleted', { timeOut: 3000 });
                }
            },
            error: function () {
                toastr.error('Error occur', 'Error occur while deleting record.', { timeOut: 3000 });
            }

        });
    }

    function fnInsertRecord() {

        var txtHeading = document.getElementById("txtHeading");
        var txtDescription = document.getElementById("txtDescription");

        var formData = new FormData();
        var file = document.getElementById("inputProfile").files[0];
        formData.append("imageFile", file);
        formData.append("BannerHeading", txtHeading.value);
        formData.append("BannerDescription", txtDescription.value);

        var response = __glb_fnIUDOperation(formData, '/Banner/InsertBanner/');
        if (response.success == true) {
            toastr.success(
                response.message,
                'Banner is inserted successfully',
                {
                    timeOut: 1000,
                    fadeOut: 1000,
                    onHidden: function () {
                        window.location.reload();
                    }
                }
            );
        }
        else {
            toastr.error('Error occur', response.message, { timeOut: 3000 });
            return;
        }
    }
</script>

<div id="add-images" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="H1">Add Banner Image</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="col-md-12 m-b-20">
                        Heading: <input type="text" id="txtHeading" class="form-control" placeholder="Enter Heading:" /><br /><br />
                        Description: <textarea id="txtDescription" class="form-control" placeholder="Enter Description:"></textarea><br /><br />
                        Banner Image: <input type="file" id="inputProfile" class="form-control" /><br /><br />
                        <div class="modal-footer">
                            <input type="submit" value="Insert" class="btn btn-success" onclick="fnInsertRecord()" />
                            <input type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true" value="Cancel" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Banner List</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item active">Banner List</li>
            </ol>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info">
                <h4 class="m-b-0 text-white">Banner list:</h4>
            </div>

            <div class="card-body">

                <div class="table-responsive m-t-40">
                    <button class="btn waves-effect waves-light btn-outline-success" data-toggle="modal" data-target="#add-images">
                        + Add Banner
                    </button>
                    <table id="example23" class="display table table-hover table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Banner Heading / Description</th>
                                <th>Created Date</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td align="center"> <a target="_blank" href="~/BannerImages/@item.BannerImage"><img src="~/BannerImages/@item.BannerImage" height="50px" width="50px" /></a></td>
                                    <td align="center">
                                        <span class="mytooltip tooltip-effect-1">
                                            <span class="tooltip-item2">@item.BannerHeading </span>
                                            <span class="tooltip-content4 clearfix">
                                                <span class="tooltip-text2">
                                                    @item.BannerDescription
                                                </span>
                                            </span>
                                        </span>
                                    </td>
                                    <td align='center'>@item.CreatedDate</td>
                                    <td align="center">
                                        <button type="submit" class="btn btn-danger waves-effect waves-light" onclick="return ConfirmationDialog(@item.BannerID)">
                                            <span class="btn-label"><i class="fa fa-trash"></i></span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


